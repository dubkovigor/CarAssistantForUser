<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.PointFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/fistPoint"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Отправная точка" />

        <EditText

            android:id="@+id/secondPoint"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Промежуточная точка" />

        <EditText

            android:id="@+id/thirdPoint"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Промежуточная точка" />

        <EditText

            android:id="@+id/fourPoint"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Промежуточная точка" />

        <Button
            android:text="@string/otimalDistance"
            android:id="@+id/buildRouteWithOptimalDistance"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:backgroundTint="#E20074"/>
        <Button
            android:text="@string/oprimalTime"
            android:id="@+id/buildRouteWithOptimalTime"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:backgroundTint="#E20074" />

        <TextView
            android:id="@+id/response"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

    </LinearLayout>

</FrameLayout>